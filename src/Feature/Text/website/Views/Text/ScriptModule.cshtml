@using Glass.Mapper.Sc.Web.Mvc
@model LionTrust.Feature.Text.Models.IScriptModule
@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12 section text-black">
                <h2 class="text-gold">@Html.Glass().Editable(Model, m => m.Title)</h2>
                @using (Html.Glass().BeginEditFrame(Model, "Edit Script Parameters", m => m.Src, m => m.ScriptId))
                {
                    <script id="@Model.ScriptId" src="@Model.Src" type="text/javascript" async></script>
                }
            </div>
        </div>
    </div>
}
else if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    @: Add datasource for the component!
}
@using System.Collections.Specialized
@using Glass.Mapper.Sc.Web.Mvc
@using LionTrust.Foundation.Analytics.Goals
@model LionTrust.Feature.Navigation.Models.ISecondaryNav
@if (Model == null && !Sitecore.Context.PageMode.IsExperienceEditor)
{
    return;
}
<div class="anchorbox">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xl-2">
                <div class="anchorbox__head">
                    @Html.Glass().Editable(m => m.Heading)
                </div>
            </div>
            @foreach (var item in Model.Children)
            {
                <div class="col-6 col-md-6 col-lg-3 col-xl-2">
                    @using (Html.Glass().BeginEditFrame<LionTrust.Feature.Navigation.Models.ILinkWithGoal>(item, null, i => i.Goal))
                    {
                        if (item.PageLink != null)
                        {
                            @Html.Glass().AnalyticsGlass().RenderLinkWithGoal(item, m => m.PageLink, item.Goal, new NameValueCollection { { "class", "btn btn-anchor anchorbox__btn" } }, isEditable: true)
                            {
                                @item.PageLink.Text
                            }
                        }
                    }
                </div>
            }
        </div>
    </div>
</div>
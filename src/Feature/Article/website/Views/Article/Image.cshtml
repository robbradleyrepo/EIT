@using Glass.Mapper.Sc.Web.Mvc
@model LionTrust.Feature.Article.Models.IImage
@if (Model == null && !Sitecore.Context.PageMode.IsExperienceEditor)
{
    return;
}

@{
    var opacity = string.IsNullOrWhiteSpace(@Model.Opacity) ? "opacity: 1" : "opacity: " + @Model.Opacity;
}

@Html.Glass().RenderImage(m => m.Image, new { @class = "full-with-img", style = opacity })
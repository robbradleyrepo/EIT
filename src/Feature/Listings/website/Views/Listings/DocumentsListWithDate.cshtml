@using Glass.Mapper.Sc.Web.Mvc
@model LionTrust.Feature.Listings.Models.IDocumentLister
@if (Model != null)
{
    <section class="container" id="lister-app" data-host="DocumentsApi" data-folderid="@Model.Id">
        <div class="doc-list">
            <h2 class="h2 mb-4 pt-3 text-black text-left">@Html.Glass().Editable(Model, m => m.NameText)</h2>
            <document-item inline-template v-for="(document, i) in searchData" :key="i + document.title" :id="document.documentId" :title="document.title">
                <div class="doc-list__item">
                    <div class="row align-items-center">
                        <div class="col-xl-3 col-lg-3">
                            <span class="doc-list__title">{{document.date}}</span>
                        </div>
                        <div class="col-xl-6 col-md-11">
                            <span class="doc-list__title">
                                {{document.title}}
                            </span>
                        </div>
                        <div class="col-lg-6 col-xl-3">
                            <div class="doc-list__links">
                                <button class="link-gray">@Html.Glass().Editable(Model, m => m.DownloadFileLabel) <i class="icon-download"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </document-item>
        </div>
    </section>
}
else if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    @:Assign datasource for Documents List component
}
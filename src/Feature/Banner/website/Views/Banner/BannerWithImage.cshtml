@using Glass.Mapper.Sc.Web.Mvc
@using LionTrust.Foundation.Analytics.Goals

@model LionTrust.Feature.Banner.Models.IBannerWithImage

@if (Model != null)
{
    var backgroundImg = Model.Image != null && !string.IsNullOrEmpty(Model.Image.Src) ? string.Format("background-image: url('{0}')", Model.Image.Src) : "";
    <div class="row" style="@backgroundImg">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="lead-banner text-center">
                <h1 class="lead-banner__title mb-3">
                    @Html.Glass().Editable(m => m.Heading)
                </h1>
                <span class="lead-banner__text">
                    @Html.Glass().Editable(m => m.Copy)
                </span>
                @Html.Sitecore().Placeholder("sub-banner")
            </div>
        </div>
    </div>
}
else if (Sitecore.Context.PageMode.IsExperienceEditor)
{
    <div style="background-color:white"><span style="color:black">Please add datasource to Banner with Image component</span></div>
}
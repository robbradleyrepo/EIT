@using Sitecore.Links
@using Sitecore.Mvc.Analytics.Extensions
@using Sitecore.Web
@{
    Layout = null;
}
@using LionTrust.Project.LionTrust
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@Html.Sitecore().Field("BrowserTitle", new { DisableWebEdit = true })</title>
    @Html.Sitecore().VisitorIdentification()
    <link rel="icon" href="/dist/images/favicon.ico">
    <link rel="stylesheet" href="/dist/css/styles.min.css">
</head>

@{ 
    var bodyClass = string.Empty;
    switch (@Html.Sitecore().CurrentItem.TemplateID.ToString())
    {
        case @Constants.PageTypes.HomeTemplateId:
            bodyClass = "main-page";
            break;
        case @Constants.PageTypes.FundPageTemplateId:
            bodyClass = "fund-detail-page";
            break;
    }

    var mainClass = string.Empty;
    switch (@Html.Sitecore().CurrentItem.TemplateID.ToString())
    {
        case @Constants.PageTypes.HomeTemplateId:
            mainClass = "main-page-conentent";
            break;
    }

    var isExperienceEditor = Sitecore.Context.PageMode.IsExperienceEditor ? "experience-editor" : string.Empty;
}

<body class="@bodyClass @isExperienceEditor">
    @Html.Sitecore().Placeholder("header")
    <main id="main" role="main" class="@mainClass">
        @Html.Sitecore().Placeholder("main")
    </main>
    @Html.Sitecore().Placeholder("footer")

    <!-- TODO: onboarding overlay - required to fix the scrolling issue  -->
    <div class="onboarding-overlay">
        <div class="onboarding-overlay__content">
            <div class="onboarding-overlay__hint">
                Please answer the following compliance questions before viewing our investment fund and insights.
            </div>
            <div class="onboarding-overlay__logo">
                <img src="images/components/header/logo.svg" alt="Liontrust" class="onboarding-overlay__img">
            </div>
            <div class="onboarding-overlay__tab" data-tab-number="0">
                <div class="onboarding-overlay__title">
                    Where are you from?
                </div>
                <div class="row set-location__row">
                    <div class="col-6 col-lg-4 set-location">
                        <div class="set-location__content">
                            <div class="set-location__title">Europe</div>
                            <ul class="set-location__list">
                                <li class="set-location__item" data-iso-country="GB">United Kingdom</li>
                                <li class="set-location__item" data-iso-country="FR">France</li>
                                <li class="set-location__item" data-iso-country="ES">Spain</li>
                                <li class="set-location__item" data-iso-country="IT">Italy</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-6 col-lg-4 order-lg-1 set-location">
                        <div class="set-location__content">
                            <div class="set-location__title">Asia</div>
                            <ul class="set-location__list">
                                <li class="set-location__item" data-iso-country="CN">China</li>
                                <li class="set-location__item" data-iso-country="JP">Japan</li>
                            </ul>
                            <div class="set-location__item" data-iso-country="O1">Rest of the World</div>
                        </div>

                    </div>
                    <div class="col-6 col-lg-4 set-location">
                        <div class="set-location__content">
                            <div class="set-location__title">America</div>
                            <ul class="set-location__list">
                                <li class="set-location__item" data-iso-country="US">United States</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="onboarding-overlay__tab" data-tab-number="1">
                <div class="onboarding-overlay__title">
                    It looks like you’re in the United Kingdom
                </div>
                <div class="onboarding-overlay__btns">
                    <button data-set-step="2" class="btn btn-primary onboarding-overlay__set-step" id="correct-location">
                        Yes, that's correct
                        <i class="icon-arrow-right animate-arrow"></i>
                    </button>
                </div>
                <a href="#" data-set-step="0" class="onboarding-overlay__get-hint onboarding-overlay__set-step">
                    Not your location?
                </a>
            </div>
            <div class="onboarding-overlay__tab" data-tab-number="2">
                <div class="onboarding-overlay__title">
                    Which of these best describes you
                </div>
                <div class="onboarding-overlay__btns">
                    <button data-set-step="3" data-investor-type="0"
                            class="btn btn-primary m-2 m-sm-0 mr-sm-2 mr-md-3 onboarding-overlay__set-step"
                            id="correct-location">
                        Private investor
                        <i class="icon-arrow-right animate-arrow"></i>
                    </button>
                    <button data-set-step="3" data-investor-type="1" class="btn btn-primary onboarding-overlay__set-step">
                        Professional investor
                        <i class="icon-arrow-right animate-arrow"></i>
                    </button>
                </div>
                <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" class="onboarding-overlay__get-hint">
                    Why are you asking this?
                </a>
            </div>
            <div class="onboarding-overlay__tab" data-tab-number="3">
                <div class="onboarding-overlay__title">
                    And finally, please confirm the following
                </div>
                <div class="onboarding-overlay__text">
                    I’m a Private Investor in the United Kingdom and I agree to comply with the <a href="#"
                                                                                                   class="onboarding-overlay__link">
                        terms and conditions
                    </a> of the
                    website.
                </div>
                <div class="onboarding-overlay__btns">
                    <button class="btn btn-primary" id="submit-board">
                        Yes, I agree
                        <i class="icon-arrow-right animate-arrow"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="onboarding-overlay__steps">
            <span data-change-step="1" class="onboarding-overlay__step active"></span>
            <span data-change-step="2" class="onboarding-overlay__step"></span>
            <span data-change-step="3" class="onboarding-overlay__step"></span>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Why are you asking this?</h5>
                </div>
                <div class="modal-body">
                    <p class="font-500">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                    </p>
                    <p class="mb-0">
                        Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium,
                        totam rem aperiam, eaque ipsa quae ab illo inventore veritatis et quasi architecto beatae vitae
                        dicta sunt.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" data-bs-dismiss="modal" aria-label="Close" class="modal-btn">ok <i class="icon-arrow-right"></i></button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="/dist/js/app.min.js"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="https://pagecdn.io/lib/zepto/1.2.0/zepto.min.js"></script>
    @if (!Sitecore.Context.PageMode.IsExperienceEditor)
    {
        <script src="/assets/js/addAnalyticsTracking.js"></script>
    }
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    @if (Html.Sitecore().CurrentItem.TemplateID.ToString() == Constants.PageTypes.HomeTemplateId)
    {
        <div class="paralax-circle">
            <div class="paralax-circle__item" style="transform: translate3d(0px, 92.9684px, 0px);"></div>
        </div>
    }
</body>
</html>
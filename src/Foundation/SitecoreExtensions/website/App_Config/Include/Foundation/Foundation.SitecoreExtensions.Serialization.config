<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
	<sitecore role:require="Standalone or ContentManagement">
		<unicorn>
			<configurations>
				<configuration
						  name="Foundation.SitecoreExtensions"
						  description="Foundation SitecoreExtensions"
						  dependencies="Foundation.Serialization"
						  patch:after="configuration[@name='Foundation.Serialization']"
						  extends="Helix.Feature.Base">
					<predicate>
						<include name="$(layer).$(module).Templates" database="core" path="/sitecore/system/Settings/Html Editor Profiles/$(layer)/$(module)" />
					</predicate>
				</configuration>
			</configurations>
		</unicorn>
	</sitecore>
</configuration>